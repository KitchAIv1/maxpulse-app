{
  "expo": {
    "name": "MaxPulse",
    "slug": "maxpulse",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#047857"
    },
    "ios": {
      "bundleIdentifier": "com.maxpulse.app",
      "supportsTablet": true,
      "infoPlist": {
        "NSMotionUsageDescription": "MaxPulse uses motion data to automatically track your daily steps and activity levels.",
        "NSHealthShareUsageDescription": "MaxPulse reads your health data to track sleep patterns and hydration levels for personalized health insights."
      }
    },
    "android": {
      "package": "com.maxpulse.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#047857"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACTIVITY_RECOGNITION",
        "android.permission.ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-sensors",
      "expo-notifications",
      "expo-secure-store",
      "expo-dev-client"
    ]
  }
}
