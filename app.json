{
  "expo": {
    "name": "MaxPulse",
    "slug": "maxpulse",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F5F5DC"
    },
    "ios": {
      "bundleIdentifier": "com.maxpulse.app",
      "supportsTablet": true,
      "buildNumber": "1",
      "infoPlist": {
        "NSMotionUsageDescription": "MaxPulse tracks your daily steps to help you achieve your health goals.",
        "NSHealthShareUsageDescription": "MaxPulse reads your health data to provide personalized wellness insights and track your progress.",
        "NSHealthUpdateUsageDescription": "MaxPulse updates your health data to keep your wellness metrics synchronized.",
        "UIBackgroundModes": [
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "package": "com.maxpulse.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#047857"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACTIVITY_RECOGNITION",
        "android.permission.ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-sensors",
      "expo-notifications",
      "expo-secure-store",
      "expo-dev-client"
    ],
    "extra": {
      "eas": {
        "projectId": "08bc45e7-d743-4620-8599-8e13940ecd88"
      }
    },
    "owner": "chieftitan"
  }
}
